{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@gilak/canvas": ["./packages/gilak-canvas/src"],
      "@gilak/canvas/*": ["./packages/gilak-canvas/src/*"],
      "@gilak/color-picker": ["./packages/gilak-color-picker/src"],
      "@gilak/color-picker/*": ["./packages/gilak-color-picker/src/*"],
      "@gilak/color-swatch": ["./packages/gilak-color-swatch/src"],
      "@gilak/color-swatch/*": ["./packages/gilak-color-swatch/src/*"],
      "@gilak/components": ["./packages/gilak-components/src"],
      "@gilak/components/*": ["./packages/gilak-components/src/*"],
      "@gilak/utils": ["./packages/gilak-utils/src"],
      "@gilak/utils/*": ["./packages/gilak-utils/src/*"],
      "@gilak/floating-window": ["./packages/gilak-floating-window/src"],
      "@gilak/floating-window/*": ["./packages/gilak-floating-window/src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  }
}
