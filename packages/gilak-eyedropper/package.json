{
  "name": "gilak-eyedropper",
  "version": "0.0.1",
  "description": "A React eyedropper color picker component for Gilak Studio",
  "author": "Aydin Ghane Kh. <https://github.com/iding-ir>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iding-ir/gilak-studio.git",
    "directory": "packages/gilak-eyedropper"
  },
  "keywords": [
    "react",
    "eyedropper",
    "color-picker",
    "gilak"
  ],
  "homepage": "https://github.com/iding-ir/gilak-studio#readme",
  "bugs": {
    "url": "https://github.com/iding-ir/gilak-studio/issues"
  },
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "**/i18n/config.ts"
  ],
