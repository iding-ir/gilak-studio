{
  "name": "@gilak/canvas",
  "version": "0.0.1",
  "description": "A React canvas component with random visual effects",
  "author": "Aydin Ghane Kh. <https://github.com/iding-ir>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iding-ir/gilak-studio.git",
    "directory": "packages/gilak-canvas"
  },
  "keywords": [
    "react",
    "canvas",
    "visual-effects",
    "gilak"
  ],
  "homepage": "https://github.com/iding-ir/gilak-studio#readme",
  "bugs": {
